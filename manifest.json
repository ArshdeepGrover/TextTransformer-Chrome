{
  "manifest_version": 3,
  "name": "TextTransformer",
  "version": "1.0",
  "description": "TextTransformer: Convert text to Pascal, kebab, camel, snake, title, sentence, upper, and lowercase cases.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "text_transformer_icon_16x16.png",
      "32": "text_transformer_icon_32x32.png",
      "48": "text_transformer_icon_48x48.png",
      "128": "text_transformer_icon_128x128.png"
    }
  },
  "permissions": ["clipboardWrite"]
}
